;;
;; groups/delete.pn
;; Pendulum Test Script
;;

PRAGMA "userdb.root" "t/tmp/pn/groups"
CALL &USERDB.OPEN
OK? @userdb.open.fail

SET %A 1       ;; by name
SET %B "users"
CALL &GROUP.FIND
OK? @missing

PRINT "found group 'users'\n"
CALL &GROUP.REMOVE
OK? @remove-failed

COPY %F %A
CALL &USERDB.SAVE
OK? @update-failed

CALL &USERDB.OPEN
OK? @userdb.open.fail

SET %A 1       ;; by name
SET %B "users"
CALL &GROUP.FIND
OK? @deleted
PRINT "found group 'group', post-delete\n"
HALT

userdb.open.fail:
  PRINT "Failed to open group file\n"
  SYSERR
  HALT

missing:
  PRINT "group not found, pre-delete\n"
  HALT

deleted:
  PRINT "group not found, post-delete\n"
  HALT

remove-failed:
  PRINT "failed to delete group\n"
  SYSERR
  HALT

update-failed:
  PRINT "failed to update group\n"
  SYSERR
  HALT
